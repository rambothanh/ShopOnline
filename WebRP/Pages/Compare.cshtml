@page
@{
    ViewData["Title"] = "Compare";
}

<!--Page Banner Start-->
<div class="page-banner" style="background-image: url(assets/images/testimonial-bg.jpg);">
    <div class="container">
        <div class="page-banner-content text-center">
            <h2 class="title">Compare</h2>
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item"><a href="~/index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Compare</li>
            </ol>
        </div>
    </div>
</div>
<!--Page Banner End-->

<!--Compare Start-->
<div class="compare-page section-padding-5">
    <div class="container">
        <div class="compare-table table-responsive">
            <table class="table">
                <tbody>
                    @* Add Compare Product in here
                        Note: one Product is one column (td), not row(tr) *@
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--Compare End-->

<script src="~/assets/js/cart.js"></script>
<script>
   

    UpdateCompare("compares");
    //Click delete Product in compare page
    $(document).on('click', "a.delete", function () {
        //Get Id product
        var productId = $(this).attr("productid");
        // do something
        DeleteProductInLocal(productId, "compares");
        //update
        UpdateCompare("compares");
    }); //End Click delete Product in compare page
</script>
@{

}
